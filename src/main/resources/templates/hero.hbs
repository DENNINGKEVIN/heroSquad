{{#partial}}

<h1>ALl Heroes</h1>
{{#if heroes}}
    {{#each}}
        <ul>
            <li> <a class="btn btn-outline-none btn-lg" data-toggle="modal" data-target="#modal">{{hero.name}}</a>
            </li><a >{{hero.name}}</a>
        </ul>
    {{/each}}
{{else}}
    <p style="color:black;">No Heroes Yet.</p>
{{/if}}
<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{hero.name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Age;  {{hero.age}}
                Special Power;  {{hero.specialPower}}
                Weakness;  {{hero.weakness}}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-primary"> <a href="/hero-form/{{hero.id}}">Update</a> </button>
            </div>
        </div>
    </div>
</div>

{{/partial}}
{{>layout}}
